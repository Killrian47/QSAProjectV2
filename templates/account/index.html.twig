{% extends 'base.html.twig' %}

{% block title %}Compte | {{ parent() }}{% endblock %}

{% block body %}
    <div class="col-8 mx-auto">
        <h2>Votre compte !</h2>
    </div>
    <div class="d-flex justify-content-center align-items-center flex-column ">
        <div class="form-container col-5 mt-5">
            <h3 class="text-center">Vos informations personnelles</h3>
            <div class="mt-3">
                <p>Votre adresse mail : {{ app.user.email }}</p>
                <p>Le nom de l'entreprise : {{ app.user.name }}</p>
                <p><a href="{{ path('app_edit_password') }}">Modifier votre mot de passe</a></p>
            </div>
        </div>
    </div>
{% endblock %}
