{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center flex-column ">
        <div class="form-container col-5 mt-5">
            <h1 class="h3 text-center font-weight-normal mb-3">Créer un nouveau mot de passe</h1>

            {{ form_start(resetForm) }}
            <div class="mt-3">
                {{ form_label(resetForm.plainPassword.first) }}
                <div class="errors mt-1">
                    {{ form_errors(resetForm.plainPassword.first) }}
                </div>
                {{ form_widget(resetForm.plainPassword.first) }}
            </div>

            <div class="mt-1">
                {{ form_label(resetForm.plainPassword.second) }}
                <div class="mt-1 errors">
                    {{ form_errors(resetForm.plainPassword.second) }}
                </div>
                {{ form_widget(resetForm.plainPassword.second) }}
            </div>

            <button class="btn qsa-btn mt-3">Réinitialiser le mot de passe</button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
