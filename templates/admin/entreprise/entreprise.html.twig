<div class="entreprise-container">
    <h4>Nom de l'entreprise : {{ entreprise.name }}</h4>

    <div class="order-of-entreprise">
        <h5>Bon de commandes de l'entreprise :</h5>
        {% set counter = 0 %}

        {% if entreprise.orders is not empty %}
            {% for orders in entreprise.orders %}
                {% set countEchantillon = 0 %}

                {% for echantillon in orders.echantillons %}
                    {% set countEchantillon = countEchantillon + 1 %}
                {% endfor %}

                {% if countEchantillon != 0 %}
                    {% if counter < 5 %}
                        {{ dump(orders) }}
                        {% set counter = counter + 1 %}
                    {% endif %}
                {% endif %}

            {% endfor %}
        {% else %}
            <p class="mb-0 d-flex justify-content-center align-items-center">Pas de bons de commandes pour cette
                entreprise</p>
        {% endif %}

    </div>
</div>